{% block input_widget %}
    <div class="mb-8">
        <label for="{{ id }}" class="block text-gray-400 font-semibold text-lg uppercase mt-4">{{ label }}</label>
        <input id="{{ id }}" name="{{ full_name }}" type="{{ type }}" autocomplete="off" placeholder="{{ placeholder }}"
               class="shadow-inner block outline-none w-full mt-1 h-8 bg-gray-900 border-gray-800 border-4 rounded mt-2 p-6 text-gray-600 text-xl">
    </div>
{% endblock %}